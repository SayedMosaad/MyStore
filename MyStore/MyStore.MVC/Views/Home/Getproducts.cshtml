@model MyStore.Application.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Getproducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @if (!Model.Products.Any())
    {
        <div class="alert alert-warning" role="alert">
            <i class="bi-alarm bi-exclamation-triangle"></i>
            No product Found!
        </div>
    }
    else
    {
        foreach (var product in Model.Products)
        {
            <div class="card col-md-3 m-1">
                <a asp-controller="Home" asp-action="ProductDetails" asp-route-id="@product.ID">
                    <img src="/images/products/@product.ImageUrl" style="width:100%; height:200px; object-fit:contain;" />
                    <p class="m-2">
                        @product.Name
                    </p>
                </a>
            </div>
        }

    }
</div>